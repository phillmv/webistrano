<% flashed_errors(:stage) %>

<% form_for(:stage, :url => stage_clone_path(@original)) do |f| %>
  
  <%= render(:partial => 'form' ) %>
  
  <%= link_to 'Back to project', project_path(current_project), :class => 'arrow_link ontheright', :style => 'margin-right: 330px' %>

  <p>
    <%= submit_tag "Clone" %>
  </p>
<% end %>

<% content_for(:breadcrumb) do %>
  <% breadcrumb_box do %>
    <%= link_to "Back to project", project_path(current_project), :style => "float:right", :class => "arrow_link" %>
    <%= link_to "Projects", projects_path %> &gt; 
    Project <%= link_to current_project.name, project_path(current_project) %> &gt;  
    Clone <%= link_to @original.name, project_stage_path(current_project, @original) %>
  <% end %>
<% end %>

<% content_for(:page_title) do %>
  <% @page_title = "Clone stage #{h(@original.name)} for project #{h(current_project.name)}" %>
  <h2>New stage</h2>
<% end %>
