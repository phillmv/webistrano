<% form_tag(project_stage_scheduled_deployment_path(current_project, current_stage), :method => :put) do %>
  <%= render :partial => 'form' %>

  <%= link_to 'Back to stage', project_stage_path(current_project, current_stage), :class => 'arrow_link ontheright', :style => 'margin-right: 330px' %>

  <p>
  <%= submit_tag "Update" %>
  </p>
<% end %>
<% content_for(:page_title) do %>
  <% @page_title = "Edit scheduled deployment for #{h(@scheduled_deployment.task)}" %>
  <h2>Edit schedule for <%=h @scheduled_deployment.task%></h2>
<% end %>

<% content_for :breadcrumb do %>
  <% breadcrumb_box do %>
    <%= link_to "Back to stage", project_stage_path(current_project, current_stage), :style => "float:right", :class => "arrow_link" %>
    Project <%= link_to current_project.name, project_path(current_project) %> &gt; 
    Stage <%= link_to current_stage.name, project_stage_path(current_project, current_stage) %> &gt;
    Scheduled Deployment <%=h @scheduled_deployment.task %> &gt;
    Edit
  <% end %>
<% end %>
