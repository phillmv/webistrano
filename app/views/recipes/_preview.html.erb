<div class="log_output">
  <table border="0" cellpadding="0" cellspacing="0">
    <tbody>
      <tr>
        <td class="lineno">
          <%= counter = 0
          recipe.body.each_line { |ln| counter = counter + 1}
          str = nil
          (1..counter).each { |i| str = "#{str} #{i}<br/>" }
          str  %>
        </td>
        <td width="100%">
          <div class="ruby">
            <%= highlight_syntax(recipe.body || '') %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>
